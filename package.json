{
  "name": "grimoirejs-forward-shading",
  "version": "0.0.0-development",
  "description": "Forward lighting package for grimoire.js",
  "main": "./ref/index.js",
  "scripts": {
    "start": "webpack --watch --progress",
    "prestart": "npm run prebuild",
    "prepublish": "npm run build -- --env.prod",
    "build": "webpack --progress",
    "prebuild": "cauldron generate-exposure --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "postbuild": "cauldron generate-reference --src ./src --dest ./src/index.ts --ts --main ./src/main.ts --dts ./ref",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GrimoireGL/grimoirejs-forward-shading.git"
  },
  "keywords": [
    "grimoire"
  ],
  "author": "GrimoireGL",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GrimoireGL/grimoirejs-forward-shading/issues"
  },
  "homepage": "https://github.com/GrimoireGL/grimoirejs-forward-shading#readme",
  "typings": "./ref/index.d.ts",
  "files": [
    "src",
    "register",
    "ref"
  ],
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "condition-circle": "^1.5.0",
    "grimoirejs-cauldron": "latest",
    "grimoirejs": "latest",
    "grimoirejs-fundamental": "latest",
    "grimoirejs-math": "latest",
    "raw-loader": "^0.5.1",
    "semantic-release": "^6.3.2",
    "ts-loader": "^2.0.3",
    "typescript": "^2.3.2",
    "webpack": "^2.4.1",
    "yargs": "^8.0.1"
  },
  "dependencies": {
    "babel-core": "^6.24.1"
  },
  "peerDependencies":{
    "grimoirejs": "latest",
    "grimoirejs-fundamental": "latest",
    "grimoirejs-math": "latest"
  },
  "release": {
    "verifyConditions": "condition-circle"
  }
}
